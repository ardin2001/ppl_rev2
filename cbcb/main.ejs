<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container col-6">
        <%- user.name %>
        <a href="/logout">logoutbro</a> 
        <a href="/create" class="btn btn-success">Create</a>
        <table class="table">
            <thead class="col-2">
              <tr>
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col">Password</th>
                <th scope="col">Active</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <% Member.forEach(e => { %>
                    <tr>
                        <td><%= e.id %> </td>
                        <th><%= e.name %> </th>
                        <td><%= e.password %> </td>
                        <td><%= e.active %> </td>
                        <td>
                            <a href="/edit/<%= e.id %> " class="btn btn-warning">Edit</a>
                            <button onclick= <%= "del("+e.id+")" %>  type="button" class="btn btn-danger" >Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        const del = (id) =>{
            alert('Are you delete id : ' +id)
            axios.delete('/api/members/'+id).then(result =>{
                alert('info status : '+ result.status)
                location.reload()
            }).catch(err =>{
                alert('error : '+err)
            })
        }
    </script>
    
</body>
</html>