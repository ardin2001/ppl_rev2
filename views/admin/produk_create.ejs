          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">harga</label>
            <input type="number" class="form-control" id="harga" name="harga">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gambar</label>
            <input type="file" class="form-control" id="image" name="gambar">
          </div>
          <div class="mb-3">
            <label ffor="exampleInputPassword1" class="form-label">Status Produk</label>
            <select name="status" class="form-control" id="inputGroupSelect02">
              <option value="1">Aktif</option>
              <option value="0">Kosong</option>
            </select>
          </div>
          <a href="/admin/produk" type="button" class="btn btn-danger" id="submit" style="margin-left: 80px;">Batal</a>          
          <button type="submit" class="btn btn-primary" id="submit">Simpan</button>
        </form>
      </div>
    </div>
</body>
