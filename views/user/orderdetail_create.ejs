<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
    <style>
        body{
            background-color: whitesmoke;
        }
    </style>
</head>
<body>
  <%- include('../template/nav_user.ejs') %>
  <form action="/user/api/order/<%= Produk.id_barang %>/<%= user.id_user %>" method="post" enctype="multipart/form-data">
    <div class="container"  style="margin-top: 20px;">
      <div class="row d-flex justify-content-evenly">
        <div class="card" style="width: 22rem; padding: 15px; margin: 3px;">
          <img src="../../../img/<%= Produk.gambar %> " class="card-img-top" width="200px" height="300px">
          <div class="card-body">
            <h5 class="card-title"><%= Produk.nama_barang %> </h5>
            <p class="card-text"><%= Produk.deskripsi %></p>
          </div>
          <ul class="list-group list-group-flush" style="padding-bottom: 10px;">
            <li class="list-group-item" id="hargaproduk">Rp. <%= Produk.harga %></li>
            <li class="list-group-item" id="hargaproduk">Show Comments : <a href="/user/rating/<%= Produk.id_barang %> ">Klik</a></li>
          </ul>
          <div class="card-body">
            <label for="exampleInputEmail1" class="form-label">Jumlah Barang</label>
            <input type="number" class="form-control mb-3" id="jumlah" placeholder="Masukkan jumlah barang..." oninput="hitung()" name="jumlah">
            <label for="exampleInputEmail1" class="form-label">Bukti Transfer</label>
            <input type="file" class="form-control mb-3" id="bukti_tf" name="gambar" accept="image/*">            
          </div>
          <ul class="list-group list-group-flush" style="padding-bottom: 10px;">
            <li class="list-group-item" id="hargaproduk"><p class="card-text text-danger" style="font-weight: bold;">No Rek : 000000000</p></li>
            <li class="list-group-item" id="hargaproduk"><p class="card-text" id="total" style="font-weight: bold;"></p></li>
          </ul>
          <button type="submit" class="btn btn-success" >Order</button>
          <a href="/user/produk" type="button" class="btn btn-danger" id="submit" style="margin-top: 10px;">Batal</a>
        </div>
      </div>
    </div>
  </form>
  </body>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script>
    const hitung = () => {
      const jumlah = document.getElementById("jumlah").value;
      const hargaproduk = document.getElementById("hargaproduk").innerHTML.replace("Rp. ","");
      document.getElementById("total").innerHTML = "Total : Rp. "+jumlah*hargaproduk;
    }
  </script>
</html>