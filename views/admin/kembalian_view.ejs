<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="../css/styles.css"/>
    <title>Document</title>
</head>
<body>
    <%- include('../template/nav.ejs') %>
    <div class="container-fluid px-4">
        <table class="table table-bordered border-dark table-hover bg">
            <thead class="bg-light">
              <tr>
                <th scope="col">id</th>
                <th scope="col">Nama Pembeli</th>
                <th scope="col">No Telp</th>
                <th scope="col">Alamat</th>
                <th scope="col">Nama Barang</th>
                <th scope="col">Bukti TF</th>
                <th scope="col">Bukti Kembalian</th>
                <th scope="col">tanggal</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% Kembalian.forEach(e => { %>
                <tr>
                  <td><%= e.id_kembalian %> </td>
                  <td><%= e.user.nama_pembeli %> </td>
                  <td><%= e.user.no_telp %> </td>
                  <td><%= e.user.alamat %> </td>
                  <td><%= e.produk.nama_barang %> </td>
                  <td><img src="../img/<%= e.info %>" width="60px" height="40px"></td>
                  <td><% if (e.bukti_kembalian === null) { %>
                    Null
                    <% } else { %>
                      <img src="../../img/<%= e.bukti_kembalian %>" width="60px" height="40px">
                    <% } %> 
                 </td>
                  <td ><%= e.updatedAt.toLocaleDateString() %> </td>
                  <td>
                      <a href="/admin/kembalian/edit/<%= e.id_kembalian %> " type="button" class="btn btn-danger">Tambah Kembalian</a>                        
                  </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    var el = document.getElementById("wrapper");
    var toggleButton = document.getElementById("menu-toggle");
    toggleButton.onclick = function () {
        el.classList.toggle("toggled");
    };
    const change = document.getElementById('title').innerHTML = "Kembalian";
</script>
</html>